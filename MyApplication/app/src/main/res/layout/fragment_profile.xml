<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/alabaster">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile_pic"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/username"
            android:textColor="@color/dark_lava"
            android:textSize="8pt"
            android:clickable="false"
            android:enabled="false"/>
    </RelativeLayout>
    <Button
            android:id="@+id/btn_blocked_list"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Blocked List"
            android:textColor="@color/alabaster"
            android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/btn_update_pic"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/middle_grey"
        android:text="Update Profile"
        android:layout_gravity="center"/>



    <Button
        android:id="@+id/btn_logout"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Logout"
        android:textColor="@color/alabaster"
        android:backgroundTint="@color/melon"/>


</LinearLayout>