<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AliChatFragment"
    android:background="@color/melon">

    <Button
        android:id="@+id/btn_group_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Chats  >"
        android:textSize="10pt"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textColor="@color/alabaster"
        android:backgroundTint="@color/melon"/>

    <RelativeLayout
        android:id="@+id/rl_search_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alabaster">

        <ListView
            android:id="@+id/lv_ptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/activity_ptop_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/melon">

            <EditText
                android:id="@+id/et_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Friend's Name" />

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_friend_name"
                android:hint="Message you want to send." />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_message"
                android:layout_centerHorizontal="true"
                android:text="Send"
                android:textColor="@color/dark_lava" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>